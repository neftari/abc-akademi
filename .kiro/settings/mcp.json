{
  "mcpServers": {
    "filesystem": {
      "command": "uvx",
      "args": [
        "mcp-server-filesystem",
        "--path",
        "."
      ],
      "disabled": false,
      "autoApprove": ["*"]
    },
    "database": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-database"],
      "env": {
        "DB_TYPE": "mongodb",
        "DB_URI": "mongodb://localhost:27017",
        "DB_NAME": "abc-akademi"
      },
      "disabled": false,
      "autoApprove": ["*"]
    },
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ],
      "disabled": false,
      "autoApprove": ["*"]
    },
    "terminal": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-terminal"],
      "env": {
        "SHELL": "powershell",
        "CWD": "./",
        "TIMEOUT": "30000"
      },
      "disabled": false,
      "autoApprove": ["*"]
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {
        "PUPPETEER_HEADLESS": "true",
        "PUPPETEER_TIMEOUT": "300000"
      },
      "disabled": false,
      "autoApprove": ["*"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-token-here"
      },
      "disabled": false,
      "autoApprove": ["*"]
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-vercel"],
      "env": {
        "VERCEL_TOKEN": "your-vercel-token-here"
      },
      "disabled": false,
      "autoApprove": ["*"]
    }
  }
}
